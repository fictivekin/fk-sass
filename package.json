{
    "name": "fk-sass",
    "version": "0.0.1",
    "description": "A starter sass framework.",
    "scripts": {
      "postcss": "postcss css/*.css -d css -c postcss.config.js -m",
      "scss": "sass scss:css --source-map",
      "build:css": "yarn scss && yarn postcss",
      "debug": "npx autoprefixer --info",
      "lint": "stylelint scss/*.scss",
      "watch:css": "onchange 'scss/**/*.scss' -o 'stylelint {{changed}} --fix && yarn build:css'",
      "start": "yarn watch:css"
    },
    "repository": {
      "type": "git",
      "url": "git://github.com/fictivekin/fk-sass.git"
    },
    "author": {
      "name": "Fictive Kin",
      "email": "hello@fictivekin.com",
      "url": "https://fictivekin.com/"
    },
    "bugs": {
      "url": "https://github.com/fictivekin/fk-sass/issues"
    },
    "homepage": "https://github.com/fictivekin/fk-sass#readme",
    "browserslist": [
      "last 2 major versions and > .2% in US",
      "> 1% in US",
      "not dead",
      "not ie 11"
    ],
    "devDependencies": {
      "autoprefixer": "^9.7.4",
      "onchange": "^6.1.0",
      "postcss-cli": "^7.1.0",
      "sass": "^1.25.0",
      "stylelint": "^13.2.0",
      "stylelint-order": "^4.0.0",
      "stylelint-scss": "^3.14.2"
    }
  }
